<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:id="@+id/cardItem">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:text="@string/testMaterialName"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/testMaterialId"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/code"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="@string/testMaterialCode"
                    android:layout_below="@+id/name"/>
                <TextView
                    android:id="@+id/weight"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:text="@string/testMaterialWeight"
                    android:layout_below="@+id/name"/>
                <TextView
                    android:id="@+id/norm"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:text="@string/testMaterialNorm"
                    android:layout_below="@+id/name"/>
                <TextView
                    android:id="@+id/color"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:text="@string/testMaterialColor"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/order"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/testPositions"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/weight"/>
                <TextView
                    android:id="@+id/shortName"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:text="@string/testMaterialShortName"
                    android:textColor="@android:color/black"
                    android:layout_below="@+id/weight"/>
                <TextView
                    android:id="@+id/rate"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
                    android:text="@string/testMaterialRate"
                    android:layout_below="@+id/weight"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>