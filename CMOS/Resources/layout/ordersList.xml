<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/numberTN"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/testNumberTN"
                    android:textStyle="bold"
                    android:textColor="#425967"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/positions"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/testPositions"
                    android:layout_below="@+id/numberTN"/>
                <TextView
                    android:id="@+id/customer"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/testCustomer"
                    android:textColor="#425967"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:id="@+id/orderId"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="@string/testOrderId"
                    android:textStyle="bold"
                    android:textColor= "#7e7e7e"
                    android:layout_below="@+id/positions"/>
                <TextView
                    android:id="@+id/percent"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/testPercent"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_below="@+id/positions"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>